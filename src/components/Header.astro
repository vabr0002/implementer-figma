<header class="header">
    <div class="header-logo">
      <a href="/" class="header-logo-link">AskExperts</a>
    </div>
  
    <nav class="header-nav">
      <ul class="header-nav-list">
        <li><a href="/" class="header-nav-item">Home</a></li>
        <li><a href="/case-study" class="header-nav-item">Case Study</a></li>
        <li><a href="/team" class="header-nav-item">Team</a></li>
        <li><a href="/about" class="header-nav-item">About</a></li>
      </ul>
    </nav>
  
    <div class="header-actions">
      <a href="/login" class="btn-small">Login</a>
    </div>
  </header>

  <style>
    @layer components {
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background-color: var(--heading-color);
      }
  
    .header-logo-link {
      font-size: 1.5rem;
      font-weight: bold;
      color: var(--white-color);
      text-decoration: none;
      
    }
  
    .header-nav-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      gap: 2rem;
      
    }
  
    .header-nav-item {
      text-decoration: none;
      color: var(--white-color);
      font-size: 1rem;
      transition: all .4s ease-in-out;
    }
  
    .header-nav-item:hover {
      color: var(--primary-color);
    }
  
    .btn-small {
        background: var(--primary-color);
        font-size: 1rem;
        padding: 4px 16px;
        border-radius: 20px;
        border: 2px solid transparent;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        display: inline-block;
        color: var(--heading-color)
    }

}
    </style>


